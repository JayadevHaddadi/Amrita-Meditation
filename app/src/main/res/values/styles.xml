<?xml version="1.0"?>
<resources>

    <style name="WhiteTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/textColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/textColor</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="BlackText">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--<item name="calendar_date_text_color">@color/custom_date_text_selector</item>-->
    <style name="CalendarViewCustomStyle">
        <item name="android:background">@color/backgroundColor</item>
        <item name="calendar_date_background">@drawable/custom_date_bg_selector</item>
        <item name="calendar_day_bar_background">@color/colorPrimaryDark</item>
        <item name="calendar_day_bar_text_color">@color/textColor</item>
        <item name="calendar_grid_color">@color/textColor</item>
        <item name="calendar_grid_on_selected_dates">false</item>
        <item name="calendar_month_text_color">@color/textColor</item>
        <item name="calendar_year_selection_arrows_color">@color/colorPrimaryDark</item>
        <item name="calendar_year_selection_background">@color/colorPrimaryDark</item>
        <item name="calendar_year_selection_text_color">@color/colorPrimaryDark</item>
    </style>

    <style name="WhiteTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WhiteTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="WhiteTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="imageButtonStyle">
        <item name="android:background">@color/transparent</item>
        <item name="android:tint">@color/textColor</item>
    </style>

    <style name="radioButtons">
        <!--<item name="android:layout_margin">2dp</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/radio_button_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>